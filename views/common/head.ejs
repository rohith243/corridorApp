            var GLOBAL = {
                user: <%- stringify(user) %>
            };
        </script>
    <%} %>

    <% if(basePath) {%>
        <script>
            var basePath= '<%= basePath %>';
        </script>
    <%} else { %>
        <script>
            var basePath= './';
        </script>
    <% } %>
